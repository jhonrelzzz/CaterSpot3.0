<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:padding="4dp"
        android:src="@drawable/bac"
        android:contentDescription="Back Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/backButton">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rr" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jhonrel Ardiente"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:text="Opportunities don’t happen, you create them."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@id/profileSection"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/aboutMeSection"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/orange"
        android:padding="12dp"
        android:layout_below="@id/descriptionText">

        <ImageView
            android:id="@+id/aboutMeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bac"
            android:contentDescription="About Me Icon" />

        <TextView
            android:id="@+id/aboutMeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="About me"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/aboutMeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:text="As a student at the University of Cebu, I am focused on back-end development and software engineering. I take pride in designing robust systems and ensuring seamless integration across platforms. My dedication lies in building scalable and efficient solutions that address real-world challenges."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:justificationMode="inter_word"
        android:layout_below="@id/aboutMeSection"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/skillsSection"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/orange"
        android:padding="8dp"
        android:layout_below="@id/aboutMeDescription">

        <ImageView
            android:id="@+id/skillsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bac"
            android:contentDescription="Skills Icon" />

        <TextView
            android:id="@+id/skillsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Skills"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/skillsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:text="• Back-End Development (Java, Python, Node.js)\n• RESTful APIs / Authentication\n• SQL / NoSQL Databases\n• Server / Cloud Integration\n"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_below="@id/skillsSection"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/socialMediaIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:contentDescription="Facebook Icon"
            android:src="@drawable/fb" />
    </LinearLayout>

</RelativeLayout>
