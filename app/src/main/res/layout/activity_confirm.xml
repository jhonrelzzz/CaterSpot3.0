<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity"
    android:padding="20dp"
    android:background="@drawable/caterspotbackground">


    <ImageView
        android:id="@+id/caterSpotLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/caterspotlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/add_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD NUMBER"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_below="@id/caterSpotLogo"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/otp_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP we send to your number."
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/add_number_title"
        android:layout_marginTop="10dp"
        android:gravity="start"/>

    <EditText
        android:id="@+id/OTP_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_description"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter OTP"
        android:inputType="phone"
        android:background="@drawable/rounded_edge"
        android:padding="12dp"
        android:textColorHint="@color/black"
        android:fontFamily="sans-serif"
        android:elevation="10dp" />

    <Button
        android:id="@+id/OTPconfirm_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/OTP_number"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="CONFIRM"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:backgroundTint="@color/lightYellow"
        android:elevation="10dp" />

</RelativeLayout>